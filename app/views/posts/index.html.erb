<h3>List Published Posts</h3>

<p><%= link_to "Create New Record", new_post_path, :class => "btn btn-success" %></p>

<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Tytuł</th>
    <th scope="col">Autor</th>
    <th scope="col">Opublikowany</th>
    <th scope="col">Treść</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <th scope="row"><%= post.id %></th>
    <td><%= post.title %></td>
    <td><%= post.author %></td>
    <td><%= post.published ? "tak" : "nie" %></td>
    <td><%= post.body %></td>
    <td>
      <%= link_to "Show", post, class: "btn btn-default btn-xs" %>
      <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary  btn-xs" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
